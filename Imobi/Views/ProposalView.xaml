<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Imobi.Views.ProposalView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:Imobi.Views.Components"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:Imobi.Views"
    Title="{Binding Title}"
    BackgroundColor="{StaticResource PageBackgroundColor}"
    mc:Ignorable="d">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="16,0,16,0">
                <StackLayout Margin="0,16,0,0" Orientation="Horizontal">
                    <Image
                        HeightRequest="32"
                        Source="ic_4squares_white"
                        WidthRequest="32" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="Medium"
                        HorizontalOptions="CenterAndExpand"
                        Text="OP"
                        TextColor="{StaticResource TitleColorDefault}" />
                    <Image
                        HeightRequest="24"
                        Source="ic_bar_graph_white"
                        WidthRequest="24" />
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <StackLayout HorizontalOptions="StartAndExpand">
                        <Label Text="FINANCIADO" TextColor="{StaticResource TextColorDefault}" />
                        <Label Text="R$ 300,000,88" TextColor="{StaticResource TextColorDefault}" />
                    </StackLayout>
                    <Image
                        HeightRequest="50"
                        HorizontalOptions="Center"
                        Source="ic_triangule_white"
                        WidthRequest="150" />
                    <StackLayout HorizontalOptions="EndAndExpand">
                        <Label Text="NUMERO" TextColor="{StaticResource TextColorDefault}" />
                        <Label
                            HorizontalTextAlignment="End"
                            Text="38987"
                            TextColor="{StaticResource TextColorDefault}" />
                    </StackLayout>
                </StackLayout>
                <StackLayout
                    Margin="0,32,0,0"
                    HorizontalOptions="FillAndExpand"
                    Orientation="Horizontal">
                    <Frame
                        BackgroundColor="{StaticResource BackgroundColorBuyerFrame}"
                        CornerRadius="8"
                        HasShadow="False"
                        HeightRequest="50"
                        HorizontalOptions="Start"
                        VerticalOptions="CenterAndExpand"
                        WidthRequest="70">
                        <StackLayout>
                            <Image
                                HeightRequest="16"
                                Source="ic_plus_circle_white"
                                WidthRequest="16" />
                            <Label
                                HorizontalOptions="CenterAndExpand"
                                Text="Add"
                                TextColor="{StaticResource TextColorDefault}" />
                        </StackLayout>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding EnableBuyerRegisterCommand}" />
                        </Frame.GestureRecognizers>
                    </Frame>
                    <ListView
                        HeightRequest="60"
                        HorizontalOptions="EndAndExpand"
                        IsVisible="{Binding ShowBuyers, Mode=OneWay}"
                        ItemsSource="{Binding Buyers}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="35" />
                                        <RowDefinition Height="35" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="70" />
                                        <ColumnDefinition Width="140" />
                                    </Grid.ColumnDefinitions>
                                    <Image
                                        Grid.RowSpan="2"
                                        Aspect="AspectFill"
                                        HeightRequest="60"
                                        Source="ic_plus_circle_white"
                                        WidthRequest="60" />
                                    <Label
                                        Grid.Column="1"
                                        FontAttributes="Bold"
                                        LineBreakMode="TailTruncation"
                                        Text="Binding Name}" />
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        FontAttributes="Italic"
                                        LineBreakMode="TailTruncation"
                                        Text="Binding Location}"
                                        VerticalOptions="End" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
                <StackLayout
                    Margin="0,16,0,0"
                    HorizontalOptions="FillAndExpand"
                    IsVisible="{Binding ShowBuyerOptions}"
                    Orientation="Horizontal">
                    <BoxView
                        BackgroundColor="{StaticResource TextColorDefault}"
                        HeightRequest="1"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="CenterAndExpand" />
                    <Label Text="Comprador" TextColor="{StaticResource TextColorDefault}" />
                    <BoxView
                        BackgroundColor="{StaticResource TextColorDefault}"
                        HeightRequest="1"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="CenterAndExpand" />
                </StackLayout>
                <StackLayout IsVisible="{Binding ShowBuyerOptions}">
                    <StackLayout Orientation="Horizontal">
                        <StackLayout HorizontalOptions="FillAndExpand">
                            <Label
                                FontAttributes="Bold"
                                FontSize="Medium"
                                Text="Docs"
                                TextColor="{StaticResource TitleColorDefault}" />
                            <BoxView
                                HeightRequest="1"
                                HorizontalOptions="StartAndExpand"
                                IsVisible="{Binding IsDocsTabVisible}"
                                VerticalOptions="CenterAndExpand"
                                Color="White" />
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding GoToDocsTabCommand}" />
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                        <StackLayout HorizontalOptions="StartAndExpand">
                            <Label
                                FontAttributes="Bold"
                                FontSize="Medium"
                                Text="Ficha"
                                TextColor="{StaticResource TitleColorDefault}" />
                            <BoxView
                                HeightRequest="1"
                                HorizontalOptions="CenterAndExpand"
                                IsVisible="{Binding IsFormTabVisible}"
                                VerticalOptions="CenterAndExpand"
                                Color="White" />
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding GoToFormTabCommand}" />
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                        <StackLayout HorizontalOptions="EndAndExpand">
                            <Label
                                FontAttributes="Bold"
                                FontSize="Medium"
                                Text="Fluxo"
                                TextColor="{StaticResource TitleColorDefault}" />
                            <BoxView
                                HeightRequest="1"
                                HorizontalOptions="CenterAndExpand"
                                IsVisible="{Binding IsFlowTabVisible}"
                                VerticalOptions="CenterAndExpand"
                                Color="White" />
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding GoToFlowTabCommand}" />
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                    </StackLayout>
                    <views:ProposalDocsView Margin="0,16,0,0" IsVisible="{Binding IsDocsTabVisible}" />
                    <views:ProposalFormView Margin="0,16,0,0" IsVisible="{Binding IsFormTabVisible}" />
                    <views:ProposalFlowView
                        Margin="0,16,0,0"
                        BindingContext="{Binding .}"
                        IsVisible="{Binding IsFlowTabVisible}" />
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>