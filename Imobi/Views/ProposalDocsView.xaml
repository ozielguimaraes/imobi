                </StackLayout>
                <StackLayout
                    Margin="0,16,0,0"
                    HorizontalOptions="CenterAndExpand"
                    Orientation="Horizontal">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding IncludeAttachmentCommand}" />
                    </StackLayout.GestureRecognizers>
                    <Image
                        HeightRequest="16"
                        Source="ic_plus_circle_white"
                        WidthRequest="16" />
                    <Label Text="ADD NOVO DOCUMENTO" TextColor="{StaticResource TextColorDefault}" />
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
