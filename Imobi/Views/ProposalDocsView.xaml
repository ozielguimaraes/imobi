<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Imobi.Views.ProposalDocsView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    BackgroundColor="{StaticResource BackgroundColorPage}"
    mc:Ignorable="d">
    <ContentPage.Content>
        <StackLayout Margin="16,0,16,0">
            <StackLayout
                Margin="0,15,0,0"
                HorizontalOptions="FillAndExpand"
                Orientation="Horizontal">
                <Frame
                    BackgroundColor="{StaticResource BackgroundColorBuyerFrame}"
                    CornerRadius="8"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="CenterAndExpand">
                    <StackLayout>
                        <Image
                            HeightRequest="16"
                            Source="ic_plus_circle_white"
                            WidthRequest="16" />
                        <Label Text="JOSE TESTE" TextColor="{StaticResource TextColorDefault}" />
                    </StackLayout>
                </Frame>
                <Frame
                    BackgroundColor="{StaticResource BackgroundColorBuyerFrame}"
                    CornerRadius="8"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="CenterAndExpand">
                    <StackLayout>
                        <Image
                            HeightRequest="16"
                            Source="ic_plus_circle_white"
                            WidthRequest="16" />
                        <Label Text="MARIA TESTE" TextColor="{StaticResource TextColorDefault}" />
                    </StackLayout>
                </Frame>
            </StackLayout>
            <StackLayout
                Margin="0,16,0,0"
                HorizontalOptions="FillAndExpand"
                Orientation="Horizontal">
                <BoxView
                    BackgroundColor="{StaticResource TextColorDefault}"
                    HeightRequest="1"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="CenterAndExpand" />
                <Label Text="Comprador" TextColor="{StaticResource TextColorDefault}" />
                <BoxView
                    BackgroundColor="{StaticResource TextColorDefault}"
                    HeightRequest="1"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="CenterAndExpand" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <StackLayout HorizontalOptions="FillAndExpand">
                    <Label
                        FontAttributes="Bold"
                        FontSize="Medium"
                        Text="Docs"
                        TextColor="{StaticResource TitleColorDefault}" />
                    <BoxView
                        HeightRequest="1"
                        HorizontalOptions="StartAndExpand"
                        VerticalOptions="CenterAndExpand"
                        Color="White" />
                </StackLayout>
                <StackLayout HorizontalOptions="StartAndExpand">
                    <Label
                        FontAttributes="Bold"
                        FontSize="Medium"
                        Text="Ficha"
                        TextColor="{StaticResource TitleColorDefault}" />
                    <BoxView
                        HeightRequest="1"
                        HorizontalOptions="CenterAndExpand"
                        IsVisible="False"
                        VerticalOptions="CenterAndExpand"
                        Color="White" />
                </StackLayout>
                <StackLayout HorizontalOptions="EndAndExpand">
                    <Label
                        FontAttributes="Bold"
                        FontSize="Medium"
                        Text="Fluxo"
                        TextColor="{StaticResource TitleColorDefault}" />
                    <BoxView
                        HeightRequest="1"
                        HorizontalOptions="CenterAndExpand"
                        IsVisible="False"
                        VerticalOptions="CenterAndExpand"
                        Color="White" />
                </StackLayout>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Image
                    HeightRequest="16"
                    Source="ic_plus_circle_white"
                    WidthRequest="16" />
                <Label Text="ADD NOVO DOCUMENTO" TextColor="{StaticResource TextColorDefault}" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>